// IOPMAssertion
routine io_pm_assertion_create(
            server      : mach_port_t;
ServerAuditToken token  : audit_token_t;
        in  props       : pointer_t;
        out assertion_id: int;
        out disableAppSleep: int;
        out enTrIntensity: int;
        out return_code : int);
        
routine io_pm_assertion_set_properties(
            server      : mach_port_t;
ServerAuditToken token  : audit_token_t;
        in  assertion_id: int;
        in  props       : pointer_t;
        out disableAppSleep: int;
        out enableAppSleep: int;
        out enTrIntensity: int;
        out return_code : int);

routine io_pm_assertion_retain_release(
            server      : mach_port_t;
ServerAuditToken token  : audit_token_t;
